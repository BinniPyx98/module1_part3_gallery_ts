{
  "compilerOptions": {
    "module": "ES6",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules"

  ],

  "allowJs": true,
  "skipLibCheck": true,
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "forceConsistentCasingInFileNames": true,
  "noFallthroughCasesInSwitch": true,
  "module": "esnext",
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,

}
